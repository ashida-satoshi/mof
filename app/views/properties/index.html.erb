<div class = "container" >
  <h1>物件一覧</h1>
  <p><%= notice %></p>
    <table>
      <tr>
        <th>物件名</th>
        <th>賃料</th>
        <th>住所</th>
        <th>築年数</th>
        <th>備考</th>
      </tr>
      <% @properties.each do |property| %>
        <tr>
          <td class="property_name"><%= property.name %></td>
          <td class="property_price"><%= property.price%></td>
          <td class="property_address"><%= property.address %></td>
          <td class="property_age_building"><%= property.age_building %></td>
          <td class="property_note"><%= property.note %></td>
          <td><%=link_to '詳細',property_path(property.id) %></td>
          <td><%=link_to '編集',edit_property_path(property.id), data: { confirm: '本当に編集していいでしょうか？' } %></td>
          <td><%=link_to '削除',property_path(property.id), method: :delete,  data: { confirm: '本当に削除していいでしょうか？' }%></td>
        </tr>
      <% end %>
    </table>
  <%= link_to '物件を登録する', new_property_path %>
</div>