 <%= form_for @property do |form| %>
  <% if @property.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@property.errors.count, "error") %> prohibited this article from being saved:</h2>
    <ul>
    <% @property.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class = "property_field"> 
    <dl class = "article1">
      <dt><%= form.label :name, "物件名" %></dt>
      <dd><%= form.text_field :name %></dd>
  
      <dt><%= form.label :price, "賃料" %></dt>
      <dd><%= form.text_field :price %>円</dd>
  
　　
      <dt><%= form.label :address, "住所" %></dt>
      <dd><%= form.text_field :address %></dd>
  
      <dt><%= form.label :age_building, "築年数" %></dt>
      <dd><%= form.text_field :age_building %></dd>
  
      <dt><%= form.label :note, "備考" %></dt>
      <dd><%= form.text_area :note %></dd>
    </dl>
  </div>

  <hr>
  
  <% @property.stations.each_with_index do |station, index| %>
    <%= form.fields_for :stations, station do |p| %>
    <h2>最寄り駅<%= index + 1 %></h2>
    <div class = "station_field">
      <dl>
        <dt><%= p.label :route_name,"路線名" %></dt>
        <dd><%= p.text_field :route_name %></dd>

        <dt><%= p.label :station_name, "駅名" %></dt>
        <dd><%= p.text_field :station_name %></dd>
 
        <dt><%= p.label :walking_time, "徒歩分数" %></dt>
        <dd><%= p.text_field :walking_time %>分</dd>
      </dl>
    </div>       
   <% end %>
  <% end %>
    <%= form.submit %>
  <% end %> 
  <br>
  <%= link_to "戻る", properties_path %>
  
    
  